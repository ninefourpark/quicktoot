{
  "manifest_version": 3,
  "name": "QuickToot",
  "description": "Toot from any tab with a single shortcut.",

  "version": "1.0.0",
  "icons": {
    "16": "icons/quicktoot-icon-16.png",
    "32": "icons/quicktoot-icon-32.png",
    "48": "icons/quicktoot-icon-48.png",
    "128": "icons/quicktoot-icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/quicktoot-icon-16.png",
      "32": "icons/quicktoot-icon-32.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage", 
    "identity", 
    "notifications", 
    "tabs", 
    "activeTab", 
    "downloads"
  ],
  "web_accessible_resources": [
    {
      "resources": ["thread-editor.html", "thread-editor.css", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://*/",
    "https://*/api/v1/*",
    "https://*/oauth/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "commands": {
    "shortcut1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1" 
      },
      "description": "Activate topic shortcut 1 (compose or linked page)"
    },
    "shortcut2": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2" 
      },
      "description": "Activate topic shortcut 2 (compose or linked page)"
    },
    "shortcut3": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3" 
      },
      "description": "Activate topic shortcut 3 (compose or linked page)"
    },
    "open-panel": { 
      "suggested_key": { 
        "default": "Ctrl+Shift+Q", 
        "mac": "Command+Shift+Q" 
      }, 
      "description": "Open QuickToot Panel" 
    }
  }
}